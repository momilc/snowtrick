{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main %}

    <div class="messages">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                {# Bootstrap alert, see http://getbootstrap.com/components/#alerts #}
                <div class="alert alert-dismissible alert-{{ type }} fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-10">
            <div class="well">
                <form action="{{ path('snowtrick_security_register') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.register'|trans }}</legend>
                        <div class="form-group">

                            {{ form_start(form) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.fullName) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword.first) }}
                            {{ form_row(form.plainPassword.second) }}
                            {{ form_row(form.profilePictureFile) }}


                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.register'|trans }}
                        </button>
                         {{ form_end(form) }}
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}

    <h1 class="jumbotron-fluid">Ajouter choix Type de Compte Auteur ou Utilisateur</h1>
    <h1 class="jumbotron-fluid">Ajouter IMAGE</h1>

{% endblock %}
