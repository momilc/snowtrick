{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_figure_new' %}

{% block main %}
    <h1>{{ 'title.figure_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.image) }}
        {{ form_row(form.category) }}
        {{ form_row(form.style) }}
        {{ form_row(form.videos) }}
        {{ form_row(form.content) }}
        {{ form_row(form.publishedAt) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_figure'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('snowtrick_admin_figure_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
    <br>
{% endblock %}

{% block sidebar %}

{% endblock %}
